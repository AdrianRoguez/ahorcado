<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="es.adrianroguez.controller.LoginController"
    prefWidth="600.0" prefHeight="400.0"
    alignment="CENTER">

    <VBox alignment="CENTER" spacing="10">
        <children>
            <ComboBox fx:id="languagesComboBox" promptText="Idioma" maxWidth="100" />

            <Text fx:id="loginTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="" />

            <Text fx:id="userText" strokeType="OUTSIDE" strokeWidth="0.0" text="" />
            <TextField fx:id="userField" maxWidth="250" />

            <Text fx:id="passwordText" strokeType="OUTSIDE" strokeWidth="0.0" text="" />
            <PasswordField fx:id="passwordField" maxWidth="250" />

            <Text fx:id="messageText" text="" />

            <Button fx:id="loginButton" onAction="#iniciarSesion" mnemonicParsing="false" text="" />

            <Button fx:id="registerButton" onAction="#openRegister" mnemonicParsing="false"
                text="" />

            <Button fx:id="usersListButton" onAction="#openUsersList" mnemonicParsing="false"
                text="" />

            <Button fx:id="rememberPasswordButton" onAction="#openRememberPassword"
                mnemonicParsing="false" text="" />
        </children>
    </VBox>
</StackPane>